<% include partials/header.ejs %>
<h1>Edit Customer</h1>
<% if(errors != undefined) { %>
    <% errors.array().forEach(function (e) { %>
        <li>
            <%= e.msg %>
        </li>
    <% }) %>
<% } %>
<% user.forEach((u, index) => { %>
    <form method="POST" action="/user/update/<%= u.id %>">
        <label>First Name</label>
        <input type="text" name="first_name" value="<%= u.first_name %>">
        <br>
        <label>Last Name</label>
        <input type="text" name="last_name" value="<%= u.last_name %>">
        <br>
        <label>Email</label>
        <input type="text" name="email" value="<%= u.email %>">
        <br>
        <br>
        <input type="submit" value="Submit">
    </form>
<% }) %>
<% include partials/footer.ejs %>
